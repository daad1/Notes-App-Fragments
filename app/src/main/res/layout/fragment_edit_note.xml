<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditNoteFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        >
        <EditText
            android:id="@+id/edttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title Note"
            android:layout_marginTop="10dp"
            android:background="#D9E6E8"
            android:padding="15dp"
            android:maxLines="1"

            android:textColorHint="@color/black"
            />
        <EditText
            android:id="@+id/edtSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subtitle Note"
            android:layout_marginTop="10dp"
            android:background="#D9E6E8"
            android:padding="15dp"
            android:maxLines="1"
            android:textColorHint="@color/black"
            />

        <EditText
            android:id="@+id/edtNotes"
            android:layout_width="390dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="#D9E6E8"
            android:gravity="start"
            android:hint="Notes Details"
            android:hintTextColor="#616161"
            android:padding="15dp"
            android:textColorHint="@color/black" />


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="26dp"
        android:src="@drawable/ic_baseline_done_24"
        app:backgroundTint="#9CDFF9" />
</FrameLayout>